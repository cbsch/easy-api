{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        //"strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "rootDir": "./src",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/client"
    ],
}
